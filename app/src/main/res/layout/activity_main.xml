<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:layout_marginTop="30dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVER"
        android:textSize="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/serverPortEditText"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:hint="PORT" />

        <Button
            android:id="@+id/connectServerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLIENT"
        android:textSize="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/addressClientEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address" />

        <EditText
            android:id="@+id/clientPortEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Port" />

        <EditText
            android:id="@+id/clientCityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Oras" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/infoSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/information_types" />

            <Button
                android:id="@+id/getInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get information" />
        </LinearLayout>

        <TextView
            android:id="@+id/weather_forecast_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"/>


    </LinearLayout>



</LinearLayout>